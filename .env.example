# MTG Binder - Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit your actual .env file to version control

# =============================================================================
# REQUIRED - Server will not start without these
# =============================================================================

# Database connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:password@localhost:5432/mtg_binder

# JWT Secret for authentication tokens
# IMPORTANT: Generate a strong random secret for production!
# You can generate one with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# =============================================================================
# OPTIONAL - Have sensible defaults
# =============================================================================

# Server configuration
NODE_ENV=development          # development | production | test
PORT=5000                     # Server port

# JWT token expiration
JWT_EXPIRES_IN=7d             # Token validity period (e.g., 7d, 24h, 1w)

# CORS - Frontend URL allowed to make requests
CLIENT_URL=http://localhost:3000

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000   # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100   # Max requests per window

# =============================================================================
# PRODUCTION CHECKLIST
# =============================================================================
# Before deploying to production, ensure:
# [ ] JWT_SECRET is a cryptographically strong random value (64+ chars)
# [ ] DATABASE_URL points to your production database
# [ ] NODE_ENV is set to "production"
# [ ] CLIENT_URL matches your deployed frontend URL
# [ ] HTTPS is enabled on your reverse proxy/load balancer
